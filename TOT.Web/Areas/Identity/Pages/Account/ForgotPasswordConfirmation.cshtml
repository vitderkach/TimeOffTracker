@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Password confirmation";
}

<h2>@ViewData["Title"]</h2>
<hr />
<div class="row">
    <div class="col-md-8">
        <br />
        <p>
            Please check your email to reset your password.<br />
            If you didn't find the message, try checking "Spam" or contact administrator for help.
        </p>
        <br />
    </div>
</div>

