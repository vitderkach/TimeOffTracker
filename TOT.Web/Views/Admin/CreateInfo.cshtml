@model AddUserInfoViewModel

<h2>Add new user information</h2>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="CreateInfo" method="post">
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Add user info</button>
    <a asp-action="Index" class="btn btn-link">Cancel</a>
</form>

