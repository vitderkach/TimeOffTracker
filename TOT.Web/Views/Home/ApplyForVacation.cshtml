                    <option value="3">Three</option>
                </select>
            </div>
            <div class="">
                <div class="" style="margin-top: 20px">
                    <div class="form-group">
                        <textarea style="resize: none;" class="form-control" rows="5" placeholder="Your notes..." id="note"></textarea>
                    </div>
                </div>
                <div class="row justify-content-end">
                    <div class="col-3">
                        <button type="submit" class="btn-block form-control col-12">Send</button>
                    </div>
                </div>
            </div>
        </form>
        <div class="col-6">
            <div class="row justify-content-end">
                <div class="col-4">
                    Some data
                </div>
            </div>
        </div>
    </div>
